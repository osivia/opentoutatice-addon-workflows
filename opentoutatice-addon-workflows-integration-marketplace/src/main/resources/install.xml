<!-- See documentation at http://doc.nuxeo.com/x/IgIz -->
<install>
	<update file="${package.root}/install/bundles" todir="${env.server.home}/nxserver/plugins" />

	<!-- Optional: use if 3rd party libraries must be installed  
	<update file="${package.root}/install/lib" todir="${env.lib}" />
	-->

	<!-- Optional: use it if you need your MP to deploy a dedicated template 
	<copy dir="${package.root}/install/templates" todir="${env.templates}" overwrite="true" />
	-->

	<!-- Optional: use it if you need your MP to activate the dedicated template
	<config addtemplate="sample" />
	-->
</install>
